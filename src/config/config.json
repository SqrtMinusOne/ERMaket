    },
    "TestingFlask": {
        "TESTING": true,
        "BCRYPT_LOG_ROUNDS": 4,
        "WTF_CSRF_ENABLED": false
    },
    "Logging": {
        "version": 1,
        "disable_existing_loggers": true,
        "formatters": {
            "brief": {
                "class": "logging.Formatter",
                "datefmt": "%I:%M:%S",
                "format": "%(levelname)-8s; %(name)-15s; %(message)s"
            },
            "single-line": {
                "class": "logging.Formatter",
                "datefmt": "%I:%M:%S",
                "format": "%(levelname)-8s: %(asctime)s: %(name)-4s: %(module)s:%(funcName)s:%(lineno)d: %(message)s"
            },
            "verbose": {
                "class": "logging.Formatter",
                "datefmt": "%I:%M:%S",
                "format": "%(levelname)-8s; [%(process)d]; %(threadName)s; %(name)-15s; %(module)s:%(funcName)s;%(lineno)d: %(message)s"
            },
            "multiline": {
                "class": "logging.Formatter",
                "format": "Level: %(levelname)s\nTime: %(asctime)s\nProcess: %(process)d\nThread: %(threadName)s\nLogger: %(name)s\nPath: %(module)s:%(lineno)d\nFunction :%(funcName)s\nMessage: %(message)s\n"
            }
        },
        "handlers": {
            "console":{
                "level": "DEBUG",
                "class": "logging.StreamHandler",
                "formatter": "single-line"
            },
            "file_handler": {
                "level": "INFO",
                "class": "logging.handlers.RotatingFileHandler",
                "formatter": "single-line",
                "filename": "../logs/app.log",
                "maxBytes": 1048576,
                "backupCount": 5,
                "mode": "a",
                "encoding": "utf-8"
            },
            "error_file_handler": {
                "level": "ERROR",
                "class": "logging.handlers.RotatingFileHandler",
                "formatter": "multiline",
                "filename": "../logs/error.log",
                "maxBytes": 1048576,
                "backupCount": 2,
                "mode": "a",
                "encoding": "utf-8"
            },
            "null": {
                "level": "DEBUG",
                "class": "logging.NullHandler",
                "formatter": "single-line"
            }
        },
        "loggers": { },
        "root": {
            "handlers": ["console", "file_handler", "error_file_handler"],
            "level": "DEBUG"
        }
    },
    "TestingLogging": {
        "handlers": {
            "file_handler": {
                "filename": "../logs/test_app.log"
            },
            "error_file_handler": {
                "filename": "../logs/test_error.log"
            }
        }
    }
}
